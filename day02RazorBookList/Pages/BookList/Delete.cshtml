@page "{id:int}"
@model day02RazorBookList.Pages.BookList.DeleteModel
@{
}
<br />
<h2 class="text-info">Delete A Book</h2>
<br />

<div class="border container" style="padding:30px;" >
    <form action="/" method="post">

        <div class="form-group row">
            <div class="col-4">
                <label>Name:</label>
            </div>
            <div class="col-8">
                <label asp-for="Book.Name"></label>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label>Author:</label>
            </div>
            <div class="col-8">
                <label asp-for="Book.Author"></label>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <label>ISBN:</label>
            </div>
            <div class="col-8">
                <label asp-for="Book.ISBN"></label>
            </div>

        </div>
        <div class="form-group row">
            <button class="btn btn-danger text-white" type="submit" value="Confirm Deletion" />
        </div>


    </form>
</div>